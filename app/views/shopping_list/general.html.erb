<!-- app/views/shopping_list/general.html.erb -->

<div class="container">
  <h1 class="text-center">General Shopping List</h1>
  <h5>Amount of food items to buy: <%= @total_items %></h5>
  <h5>Total value of food needed:  <%= @general_total_price %></h5>

  <table class="table table-striped table-hover table-sm table-bordered">
    <thead>
      <tr>
        <th>Food</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
  <% @missing_foods.each do |deficit_item| %>
    <tr>
      <td><%= deficit_item[:food].name %></td>
      <td><%= deficit_item[:deficit_quantity] %> <%= deficit_item[:food].measurement_unit %></td>
      <td>$<%= deficit_item[:food].price %></td>
    </tr>
  <% end %>
</tbody>
  </table>
</div>
