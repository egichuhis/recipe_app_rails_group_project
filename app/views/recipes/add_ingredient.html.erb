<!-- views/recipes/add_ingredient.html.erb -->

<div class="container">
  <h1 class="text-center">Add Ingredient to <%= @recipe.name %></h1>

  <%= form_with(model: [recipe, recipe.foods.build], url: recipe_foods_path(recipe), local: true) do |form| %>
    <div class="mb-3">
      <%= form.label :food_id, 'Food' %>
      <%= form.collection_select(:food_id, Food.all, :id, :name, prompt: 'Select a food', class: 'form-control') %>
    </div>
    <div class="mb-3">
      <%= form.label :quantity %>
      <%= form.number_field :quantity, class: 'form-control', required: true %>
    </div>
    <!-- Other fields as needed -->
    <%= form.submit 'Add Ingredient', class: 'btn btn-primary' %>
  <% end %>
</div>
