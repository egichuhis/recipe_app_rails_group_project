<div class="container">
    <h1 class="text-center">Shopping List</h1>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h5>Amount of food items to buy: <%= @recipe.recipe_foods.count %></h5>
        </div>
        <div class="col-md-6 d-flex">
            <h5>Total value of food needed: $<%= @recipe.recipes_total_price %></h5>
        </div>
    </div>
</div>
<hr />
<div class="container table-responsive">
    <table class="table table-striped table-hover table-sm table-bordered">
        <thead>
            <tr>
                <th>Food</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            <% @recipe.recipe_foods.each do |recipe_food| %>
                <tr>
                    <td><%= recipe_food.food.name %></td>
                    <td><%= recipe_food.quantity %> <%= recipe_food.food.measurement_unit %></td>
                    <td>$<%= recipe_food.value %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
