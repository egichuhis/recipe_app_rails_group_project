<!-- views/recipes/show.html.erb -->

<div class="container">
  <h1 class="text-center"><%= @recipe.name %></h1>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h4>Preparation time: <%= @recipe.preparation_time %> hours</h4>
      <h4>Cooking time: <%= @recipe.cooking_time %> hours</h4>
    </div>
    <div class="col-md-6 d-flex justify-content-end align-items-center">
      <label class="form-label fs-3 me-3 fw-bold mt-2">
        Is Public
      </label>
      <% if @recipe.user == current_user %>
      <%= form_with(model: @recipe, url: recipe_path(@recipe), method: :patch) do |form| %>
        <div class="form-check fs-3">
          <%= form.check_box :is_public, class: 'form-check-input', onchange: 'this.form.submit()' %>
        </div>
      <% end %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <h4>Description</h4>
      <p><%= @recipe.description %></p>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <button class="btn btn-primary" type="button">Generate Shopping List</button>
    </div>
    <% if @recipe.user == current_user %>
      <div class="col-md-6 d-flex justify-content-end">
        <%= link_to 'Add Ingredient', new_recipe_recipe_food_path(@recipe), class: 'btn  btn-sm btn-primary' %>
      </div>
    <% end %>
  </div>
</div>

<hr />
<div class="container table-responsive">
  <table class="table table-striped table-hover table-sm table-bordered">
    <thead>
      <tr>
        <th>Food</th>
        <th>Quantity</th>
        <th>Value</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @recipe.foods.each do |food| %>
        <tr>
          <td><%= food.name %></td>
          <td><%= food.quantity %></td>
          <td><%= food.value %></td>          
          <td class="d-flex justify-content-between">
            <%= link_to 'Modify', edit_food_path(food) %>
            <%= link_to 'Remove', food_path(food), method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
