<!DOCTYPE html>
<html>
  <head>
    <title>RecipeAppRailsGroupProject</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>

    <% if user_signed_in? %>
    <!-- Top-right section with User label and Logout button -->
    <div class="container d-flex justify-content-between align-items-center">
      <!-- User label -->
      <div>
        <p class="text-muted">Welcome, <%= @current_user.name %></p>
      </div>

      <!-- Logout button -->
      <div>
        <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-sm btn-danger" %>
      </div>
    </div>
  <% end %>

  <div>
    <!-- Notice and Alert messages -->
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </div>

    <%= yield %>
  </body>
</html>
