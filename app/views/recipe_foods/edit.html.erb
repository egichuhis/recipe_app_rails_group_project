<!-- views/recipe_foods/edit.html.erb -->

<div class="container">
  <h1 class="text-center">Modify Ingredient in <%= @recipe.name %></h1>

  <%= form_with(model: [@recipe, @recipe_food], url: recipe_recipe_food_path(@recipe, @recipe_food), method: :patch, local: true) do |form| %>
    <div class="mb-3">
      <%= form.label :food_id, 'Food' %>
      <%= form.collection_select(:food_id, Food.all, :id, :name, prompt: 'Select a food', class: 'form-control') %>
    </div>
    <div class="mb-3">
      <%= form.label :quantity %>
      <%= form.number_field :quantity, class: 'form-control', required: true %>
    </div>

    <div class="d-flex justify-content-center">
      <%= form.submit 'Modify Ingredient', class: 'btn btn-sm btn-primary' %>
    </div>
  <% end %>
</div>
